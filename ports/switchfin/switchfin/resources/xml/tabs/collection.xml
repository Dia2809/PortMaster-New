<brls:Box
    width="auto"
    height="auto"
    paddingLeft="@style/main/content_padding_sides"
    paddingRight="@style/main/content_padding_sides"
    paddingBottom="@style/main/content_padding_top_bottom">

    <AutoTabFrame
        id="media/tabFrame"
        grow="1"
        defaultTab="0"
        tabHeight="60"
        tabItemActiveTextColor="@theme/color/app"
        sidebarPosition="top">

        <Tab label="@i18n/main/tabs/home"
            fontSize="18">
            <RecyclingGrid
                grow="1"
                wireframe="false"
                spanCount="6"
                itemHeight="300"
                id="media/series" />
        </Tab>
    </AutoTabFrame>

    <ButtonClose
        positionType="absolute"
        positionTop="2"
        positionRight="2" />

</brls:Box>