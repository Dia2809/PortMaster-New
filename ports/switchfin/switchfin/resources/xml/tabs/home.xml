<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        grow="1.0">

        <brls:Box
            axis="column"
            paddingLeft="@style/main/content_padding_sides"
            paddingRight="@style/main/content_padding_sides"
            paddingTop="@style/main/content_padding_top_bottom"
            paddingBottom="@style/main/content_padding_top_bottom">

            <RecylingVideo
                nextPage="auto"
                resume="true"
                pageSize="6"
                frameHeight="235"
                itemWidth="325"
                id="home/user/resume"
                title="@i18n/main/home/resume" />

            <RecylingVideo
                nextPage="auto"
                pageSize="6"
                frameHeight="235"
                itemWidth="325"
                id="home/show/nextup"
                title="@i18n/main/home/nextup" />

            <RecylingVideo
                pageSize="20"
                frameHeight="300"
                itemWidth="175"
                id="home/movie/latest"
                title="@i18n/main/search/genres/movie" />
            
            <RecylingVideo
                pageSize="20"
                frameHeight="300"
                itemWidth="175"
                id="home/series/latest"
                title="@i18n/main/search/genres/series" />

            <RecylingVideo
                pageSize="20"
                frameHeight="225"
                itemWidth="175"
                id="home/music/latest"
                title="@i18n/main/search/genres/music" />

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>