<brls:Box
    width="auto"
    height="auto">

    <AutoTabFrame
        id="series/tabFrame"
        grow="1"
        tabBackgroundColor="@theme/color/grey_1"
        tabItemActiveTextColor="@theme/color/app"
        defaultTab="0"
        demandMode="false"
        sidebarWidth="150"
        sidebarPosition="left">

        <Tab label="@i18n/main/media/intro"
            fontSize="22">

            <brls:Box
                paddingLeft="@style/main/content_padding_sides"
                paddingRight="@style/main/content_padding_sides"
                paddingTop="@style/main/content_padding_top_bottom"
                paddingBottom="@style/main/content_padding_top_bottom">

                <brls:Box
                    width="200"
                    maxHeight="400"
                    axis="column"
                    marginRight="15">
                    <brls:Image
                        id="series/image/logo"
                        scalingType="fit"
                        backgroundColor="@theme/color/grey_1"
                        image="@res/img/video-card-bg.png" />
                </brls:Box>

                <brls:ScrollingFrame
                    width="auto"
                    height="auto"
                    grow="1.0">

                    <brls:Box
                        paddingRight="@style/main/content_padding_sides"
                        axis="column">

                        <brls:Header
                            marginBottom="10"
                            height="40"
                            id="series/header/title" />

                        <brls:Box
                            alignItems="center"
                            marginBottom="10">

                            <brls:Label
                                id="series/label/genres"
                                fontSize="15"
                                animated="false"
                                marginBottom="15" />

                            <brls:Padding />

                            <brls:Label
                                id="series/label/year"
                                marginRight="10"
                                fontSize="15" />

                            <brls:Box
                                wireframe="false"
                                borderColor="@theme/brls/text"
                                borderThickness="1"
                                visibility="gone"
                                paddingLeft="5"
                                paddingRight="5"
                                height="30"
                                marginRight="10">
                                <brls:Label
                                    id="series/parental/rating"
                                    singleLine="true"
                                    wireframe="false"
                                    fontSize="15" />
                            </brls:Box>

                            <brls:Box
                                wireframe="false"
                                alignItems="center"
                                visibility="gone">
                                <SVGImage
                                    width="15"
                                    height="15"
                                    svg="@res/icon/ico-star.svg" />
                                <brls:Label
                                    id="series/label/rating"
                                    marginLeft="2"
                                    fontSize="15" />
                            </brls:Box>
                        </brls:Box>

                        <TextBox
                            id="series/label/overview"
                            fontSize="15"
                            textColor="@theme/font/grey" />

                        <brls:Header
                            height="40"
                            id="series/label/nextup"
                            title="@i18n/main/home/nextup" />

                        <HRecyclerFrame
                            height="240"
                            itemWidth="325"
                            id="series/nextup" />

                        <brls:Header
                            height="40"
                            id="series/label/people"
                            title="@i18n/main/media/people" />

                        <HRecyclerFrame
                            height="250"
                            itemWidth="140"
                            id="series/people" />

                        <brls:Header
                            height="40"
                            id="series/label/similar"
                            title="@i18n/main/media/similar" />

                        <HRecyclerFrame
                            height="250"
                            itemWidth="140"
                            id="series/similar" />

                    </brls:Box>

                </brls:ScrollingFrame>
            </brls:Box>
        </Tab>

    </AutoTabFrame>
</brls:Box>