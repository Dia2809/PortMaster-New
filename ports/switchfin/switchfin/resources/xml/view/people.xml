<brls:Box
    paddingLeft="@style/main/content_padding_sides"
    paddingRight="@style/main/content_padding_sides"
    paddingTop="@style/main/content_padding_top_bottom"
    paddingBottom="@style/main/content_padding_top_bottom">

    <brls:Box
        width="220"
        maxHeight="400"
        axis="column"
        alignItems="center"
        marginRight="30">
        <brls:Image
            id="people/image/logo"
            scalingType="fit"
            backgroundColor="@theme/color/grey_1"
            image="@res/img/video-card-bg.png" />

        <brls:Label
            id="people/label/location"
            fontSize="16"
            animated="false"
            marginTop="15" />
    </brls:Box>

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        grow="1.0">

        <brls:Box
            paddingRight="@style/main/content_padding_sides"
            axis="column">

            <brls:Header
                marginBottom="10"
                height="40"
                id="people/header/title" />

            <brls:Label
                id="people/label/overview"
                fontSize="15"
                animated="false"
                textColor="@theme/font/grey"
                marginBottom="20" />

            <RecylingVideo
                nextPage="auto"
                frameHeight="250"
                itemWidth="140"
                id="people/movie"
                title="@i18n/main/search/genres/movie" />

            <RecylingVideo
                nextPage="auto"
                frameHeight="250"
                itemWidth="140"
                id="people/series"
                title="@i18n/main/search/genres/series" />

        </brls:Box>

    </brls:ScrollingFrame>
</brls:Box>