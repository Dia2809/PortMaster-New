<brls:Box
    width="auto"
    height="auto"
    justifyContent="flexEnd"
    backgroundColor="@theme/brls/backdrop">

    <brls:Box
        id="filter/cancel"
        height="100%"
        hideClickAnimation="true"
        grow="1" />

    <brls:Box
        width="360"
        height="100%"
        axis="column"
        backgroundColor="@theme/brls/background">

        <brls:ScrollingFrame
            id="media/filters"
            width="100%"
            grow="1"
            scrollingBehavior="centered">

            <brls:Box
                width="auto"
                height="auto"
                axis="column"
                paddingTop="@style/main/content_padding_top_bottom"
                paddingLeft="@style/main/content_padding_sides"
                paddingRight="@style/main/content_padding_sides"
                paddingBottom="@style/main/content_padding_top_bottom"
                alignItems="stretch">

                <brls:Header
                    width="auto"
                    height="auto"
                    title="@i18n/main/media/sort" />
                <brls:Box
                    width="100%"
                    height="auto"
                    axis="column"
                    marginBottom="30px">
                    <brls:SelectorCell
                        id="media/sort/by" />
                    <brls:SelectorCell
                        id="media/sort/order" />
                </brls:Box>

                <brls:Header
                    width="auto"
                    height="auto"
                    title="@i18n/main/media/filter" />
                <brls:Box
                    width="100%"
                    height="auto"
                    axis="column"
                    marginBottom="30px">
                    <brls:BooleanCell
                        id="media/filter/played" />
                    <brls:BooleanCell
                        id="media/filter/unplayed" />
                </brls:Box>

            </brls:Box>

        </brls:ScrollingFrame>
    </brls:Box>
</brls:Box>